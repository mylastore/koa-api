{
  "name": "koa-api",
  "version": "2.0.1",
  "description": "Authentication, with refresh token & forgot password, node API with Koa, mongoDB and mongoose",
  "author": "Oscar Quinteros",
  "private": false,
  "engines": {
    "node": "16.17.0"
  },
  "scripts": {
    "start": "NODE_ENV=development nodemon app.js --exec",
    "live": "NODE_ENV=production nodemon app.js --exec",
    "test": "NODE_ENV=testing jest --forceExit",
    "build": "NODE_ENV=production babel src -d build && npm run pretty",
    "pretty": "prettier --write --print-width 80 --single-quote --trailing-comma es5 --tab-width 4 --no-semi 'src/**/*.js' 'tests/**/*.js'",
    "clean": "npm cache clean --force",
    "seed": "node -r esm src/seed/seed.js"
  },
  "dependencies": {
    "@babel/polyfill": "^7.12.1",
    "@koa/cors": "^3.1.0",
    "@koa/router": "^12.0.0",
    "@sendgrid/mail": "^7.4.6",
    "bcrypt": "^5.0.0",
    "core-js": "^3.16.2",
    "dotenv": "^6.0.0",
    "formidable": "^1.2.2",
    "jsonwebtoken": "^9.0.0",
    "koa": "^2.14.1",
    "koa-body": "^4.2.0",
    "koa-helmet": "^5.2.0",
    "koa-json-error": "^3.1.2",
    "koa-qs": "^3.0.0",
    "koa-router": "^7.4.0",
    "koa-static": "^5.0.0",
    "moment": "^2.29.1",
    "mongoose": "^5.13.15",
    "mongoose-unique-validator": "^2.0.3",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "randexp": "^0.4.9",
    "regenerator-runtime": "^0.13.9",
    "sharp": "^0.31.1",
    "slugify": "^1.4.5",
    "string-strip-html": "^6.0.4"
  },
  "devDependencies": {
    "@babel/cli": "^7.18.10",
    "@babel/core": "^7.19.0",
    "@babel/preset-env": "^7.19.0",
    "@babel/register": "^7.18.9",
    "esm": "^3.2.25",
    "nodemon": "^2.0.4",
    "prettier": "^1.13.4"
  },
  "jest": {
    "testEnvironment": "node"
  }
}
